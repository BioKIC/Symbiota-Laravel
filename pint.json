{
    "preset": "laravel",
    "rules": {
        "simplified_null_return": true,
        "array_indentation": false,
        "braces_position": {
            "classes_opening_brace": "same_line",
            "control_structures_opening_brace": "same_line",
            "functions_opening_brace": "same_line"
        },
        "concat_space": {
            "spacing": "one"
        },
        "new_with_parentheses": {
            "anonymous_class": true,
            "named_class": true
        }
    },
    "exclude": [
        "Portal"
    ]
}
